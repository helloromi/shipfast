## Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

## Site (prod)
NEXT_PUBLIC_SITE_URL=

## Admins (emails séparés par des virgules)
ADMIN_EMAILS=

## Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

## Stripe Price IDs (créer ces prix dans votre dashboard Stripe)
STRIPE_SUBSCRIPTION_PRICE_ID_MONTHLY=
STRIPE_SUBSCRIPTION_PRICE_ID_QUARTERLY=
STRIPE_SUBSCRIPTION_PRICE_ID_YEARLY=

## Logs/debug (optionnel)
LOG_STRIPE_WEBHOOKS=0
LOG_STRIPE_SUCCESS=0

## Imports / consentement IA (optionnel)
REQUIRE_AI_CONSENT=1

## Resend (emails)
RESEND_API_KEY=
## Adresse expéditeur par défaut (format: "Nom <adresse@domaine.com>")
RESEND_FROM=
RESEND_AUDIENCE_ID=
## Adresses expéditeur par type d'email (optionnel — fallback sur RESEND_FROM si absent)
RESEND_FROM_WELCOME=
RESEND_FROM_BILLING=
RESEND_FROM_SUBSCRIPTION=

## Cron protection (appeler les endpoints cron avec Authorization: Bearer <CRON_SECRET>)
## ⚠️ IMPORTANT: Générer un secret aléatoire fort (ex: openssl rand -hex 32)
## Ne JAMAIS utiliser la même valeur en production que celle utilisée ailleurs
CRON_SECRET=

## OpenAI (import de scènes par IA)
OPENAI_API_KEY=

## Réglages avancés des imports (optionnel)
## Timeout global de traitement en ms (0 = désactivé)
IMPORT_SOFT_TIMEOUT_MS=0
## Timeout de l'OCR PDF OpenAI en ms
OPENAI_PDF_OCR_TIMEOUT_MS=45000
## Échelle de rendu PDF pour l'OCR (ex: 1.5 = qualité élevée)
PDF_OCR_SCALE=1.5
## Activer les logs détaillés des imports (0 ou 1)
DEBUG_IMPORTS=0

